                </ul>
            </li>

        </ul>

    </div>
    <ul class="header__right__widget">
        <li class="header__right__widget-item">
            <i class="fas fa-search"></i>

            <div class="header__search">
                <form action="/SanPham/SanPhamPartial" method="post">
                    <h6>Tìm kiếm sản phẩm</h6>
                    <input type="text" class="form-control" placeholder="Nhập tên sản phẩm..." name="timkiem" style=" font-size: 1.6rem;">
                    <button type="submit" class="btn btn-dark" style=" padding: 0 50px; margin-top: 12px; font-size: 20px;">Tìm kiếm</button>
                </form>
            </div>
        </li>
        <li>
            <a href="#">
                <i class="far fa-heart"></i>
                <div class="tip">0</div>
            </a>
        </li>
        <li>
            @Html.Action("GioHangPartial", "GioHang")
        </li>
    </ul>
}
else
{
    <div class="header__right__auth">
        <a href="@Url.Action("DangNhap", "Home")">Đăng nhập</a>
        <a>/</a>
        <a href="@Url.Action("DangKy", "Home")">Đăng ký</a>
    </div>
    <ul class="header__right__widget">
        <li class="header__right__widget-item">
            <i class="fas fa-search"></i>

            <div class="header__search">
                <form action="/SanPham/SanPhamPartial" method="post">
                    <h6>Tìm kiếm sản phẩm</h6>
                    <input type="text" class="form-control" placeholder="Nhập tên sản phẩm..." name="timkiem" style=" font-size: 1.6rem;">
                    <button type="submit" class="btn btn-dark" style=" padding: 0 50px; margin-top: 12px; font-size: 20px;">Tìm kiếm</button>
                </form>
            </div>
        </li>
        <li>
            <a href="#">
                <i class="far fa-heart"></i>
                <div class="tip">0</div>
            </a>
        </li>
        <li>
            <a href="@Url.Action("GioHang", "GioHang")">
                <i class="fas fa-cart-plus"></i>
                <div class="tip">(@ViewBag.tongSoLuong)</div>
            </a>
        </li>
    </ul>         
}