@using WebKhoaLuan.Models;


@{ TAIKHOAN kh = (TAIKHOAN)Session["kh"]; }
@if (Session["kh"] != null)
{   
    <img src="~/Images/customer/@kh.HINH" alt="Alternate Text" style="width: 25px; height: 25px; border-radius: 50%; margin-top: -8px;" />
    <div class="header__right__auth">
        @*<a href="@Url.Action("ThongTin", "KhachHang", new { username = (Model.USERNAME).Trim() })">Hi, @Model.USERNAME</a>*@
        
        <ul class="header__right__menu">
            <li class="header__right__menu-item">
                
                <a href="#">Hi, @kh.HOTEN.ToString() </a>
                <ul class="header__subnav">
                    <li class="header__subnav-item"><a href="@Url.Action("ThongTinKH", "Home", new { username = (kh.USERNAME).Trim()})"><i class="ti-info-alt"></i>Thông tin</a></li>
                    <li class="header__subnav-item"><a href="@Url.Action("YCTraHang", "Home", new { username = (kh.USERNAME).Trim()})"><i class="ti-pencil-alt"></i>Yêu Cầu Trả Hàng</a></li>
