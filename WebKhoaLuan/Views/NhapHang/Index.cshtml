@using PagedList.Mvc;
@using PagedList;
@model IPagedList<WebKhoaLuan.Models.PHIEUNHAPHANG>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .pagination {
        margin-top: 20px;
        box-sizing: border-box;
        justify-content: center;
        list-style: none;
        display: flex;
    }

        .pagination li a {
            display: inline-block;
            height: 40px;
            width: 40px;
            border: 1px solid #f2f2f2;
            border-radius: 50%;
            font-size: 14px;
            color: #111111;
            font-weight: 600;
            line-height: 40px;
            text-align: center;
            -webkit-transition: all, 0.3s;
            -o-transition: all, 0.3s;
            transition: all, 0.3s;
            margin-right: 6px;
        }

            .pagination li a:last-child {
                margin-right: 0;
            }

        .pagination li.active a {
            background: #000;
            color: #fff;
        }

        .pagination li a i {
            font-weight: 600;
        }

        .pagination li a:hover {
            background: #0d0d0d;
            border-color: #0d0d0d;
            color: #ffffff;
        }
</style>
<div class="topbar">
    <div class="toggle">
        <ion-icon name="menu-outline"></ion-icon>
    </div>
    <!-- search -->
    @*<form action="~/Order/Index" class="search" method="post">
        <label>
            <input type="text" name="timkiem" placeholder="Nhập mã đơn hàng">
            <ion-icon name="search-outline"></ion-icon>
        </label>
    </form>*@
    <!-- UserImg -->
    <div class="user">
        <img src="~/Images/logo-hufi.jpg" />
    </div>
</div>

<div class="details" style="display:inline-block; font-size:13px;">
    <div class="recentOrders">
        <div class="cardHeader">
            <h2>Danh sách Phiếu Nhập Hàng</h2>
        </div>
        <table>
            <thead>
                <tr>
                    <td style="text-align: start;">Mã phiếu nhập hàng</td>
                    <td style="text-align: start;">Mã phiếu đặt hàng</td>
                    <td style="text-align: start; width: 145px;">Nhà cung cấp</td>
                    <td style="text-align: start; ">Ngày đặt</td>

                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: start;">@Html.DisplayFor(modelItem => item.MAPHIEUNH)</td>
                        <td style="text-align: start;">@Html.DisplayFor(modelItem => item.MAPHIEUDH)</td>
                        <td style="text-align: start;">@Html.DisplayFor(modelItem => item.NHACC.TENNCC)</td>
                        <td style="text-align: start;">@Html.DisplayFor(modelItem => item.PHIEUDATHANG.NGAYDAT)</td>

                        <td style="float:right">
                            <a href="@Url.Action("CTPhieuDatHang","DatHang",new { id = item.MAPHIEUDH })" role="button" class="btn-success mt-3" style="background-color: #28A745; text-align: center; vertical-align: middle; cursor: pointer; text-decoration: none; border: 1px solid transparent; padding: 8px 3px; border-radius: 4px; margin-left: 6px; margin-bottom: 5px; ">
                                Xem HĐ Đặt Hàng
                            </a>
                            <a href="@Url.Action("XemPNH","NhapHang",new { id = item.MAPHIEUNH })" role="button" class="btn-success mt-3" style="background-color: #28A745; margin-left: 6px; text-align: center; vertical-align: middle; cursor: pointer; text-decoration: none; border: 1px solid transparent; padding: 8px 3px; border-radius: 4px; margin-bottom: 5px; ">
                                Nhập Hàng
                            </a>
                          
                        @*    <a href="@Url.Action("Delete1","NhapHang",new { id = item.MAPHIEUNH })" role="button" class=" btn-success mt-3" style="background-color: #e74c3c; margin-left: 6px; text-align: center; vertical-align: middle; cursor: pointer; text-decoration: none; border: 1px solid transparent; padding: 8px 8px; border-radius: 3px "><i class="far fa-trash-alt"></i></a>*@
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div style="text-align:center;">
        @Html.PagedListPager(Model, page => Url.Action("Index", "NhapHang", new { page }))
    </div>
</div>