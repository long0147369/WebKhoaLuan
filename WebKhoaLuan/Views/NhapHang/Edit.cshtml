@model WebKhoaLuan.Models.CTPHIEUNHAPHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .form-row {
        display: flex;
        /* flex-wrap: wrap;*/
        margin-right: -5px;
        margin-left: -5px;
    }

    .form-group {
        margin-left: 30px;
        margin-bottom: 20px;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

        .form-control:disabled, .form-control[readonly] {
            background-color: #e9ecef;
            opacity: 1;
        }
</style>
<div class="topbar">
    <div class="toggle">
        <ion-icon name="menu-outline"></ion-icon>
    </div>


    <!-- UserImg -->
    <div class="user">
        <img src="~/Images/logo-hufi.jpg" />
    </div>
</div>
<div class="create_product" style="margin-left:15px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h2 style="text-align:center;">Nhập sản phẩm</h2>
        <div class="form-horizontal" style="border: 1px solid; margin: 8px; border-radius: 8px; box-shadow: 0 7px 25px rgb(0 0 0 / 8%); ">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MACTPNH)


            <div class="form-row" style=" margin-top: 20px;">
                <div class="form-group col-md-9">
                    Tên Sản phẩm:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SANPHAM.TENSP, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.SANPHAM.TENSP, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-9">
                    Mã SP
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MASP, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.MASP, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row" style=" margin-top: 20px;">
                <div class="form-group col-md-4">
                    Mã phiếu nhập hàng:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MAPHIEUNH, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.MAPHIEUNH, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    Số lượng đặt:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SLTUNGDV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.SLTUNGDV, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
            <div class="form-row" style=" margin-top: 20px;">

                <div class="form-group col-md-4">
                    Giá nhập hàng
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GIANHAP, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "number", @min = "1" } })
                        @Html.ValidationMessageFor(model => model.GIANHAP, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    Số lượng nhập
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SOLUONGNHAP, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "number", @min = "1", @max = "9999" } })
                        @Html.ValidationMessageFor(model => model.SOLUONGNHAP, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>








            <div style=" margin-left: 14px;">
                <a style=" margin: 28px; " href="@Url.Action("Index", "NhapHang")" role="button" class="btn btn-primary"><i class="fas fa-angle-left"></i> Trở về</a>
                <input type="submit" value="Nhập Hàng" class="btn btn-default" style="background-color: #28A745; color: #ffffff; margin-left: -20px; " />
            </div>

        </div>
    }


</div>