@using WebKhoaLuan.Models;
@model SANPHAM


@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SANPHAM> tt = ViewBag.spDexuat as List<SANPHAM>;
}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="@Url.Action("Index", "Home")"><i class="ti-home"></i> Trang Chủ</a>
                    <a href="@Url.Action("SanPhamPartial", "SanPham")">Sản Phẩm</a>
                    <a href="@Url.Action("SanPhamPartial", "SanPham", new { maloai = Model.MALOAI})">@Model.LOAISP.TENLOAI</a>
                    <span>@Model.TENSP</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="detail">
    <div class="container">
        <div class="row" style="padding-top:20px">
            <div class="col-lg-6">
                @*<div class="detail__img">
                        <img class="detail__img-img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="Ảnh Sản Phẩm" />
                    </div>*@

                <div class="product__details__pic">
                    <div class="product__details__pic__left product__thumb nice-scroll">
                        <a class="pt active" href="#product-1">
                            <img class="detail__img-img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="Ảnh Sản Phẩm" />
                        </a>
                        <a class="pt" href="#product-2">
                            <img class="detail__img-img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="Ảnh Sản Phẩm" />
                        </a>
                        <a class="pt" href="#product-3">
                            <img class="detail__img-img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="Ảnh Sản Phẩm" />
                        </a>
                        <a class="pt" href="#product-4">
                            <img class="detail__img-img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="Ảnh Sản Phẩm" />
                        </a>
                    </div>
                    <div class="product__details__slider__content">
                        <div class="product__details__pic__slider owl-carousel">
                            <img data-hash="product-1" class="product__big__img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="">
                            <img data-hash="product-2" class="product__big__img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="">
                            <img data-hash="product-3" class="product__big__img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="">
                            <img data-hash="product-4" class="product__big__img" src="@Url.Content("~/Images/img_sp/" + Model.HINH)" alt="">
                        </div>
                    </div>
                </div>


            </div>
            <div class="col-lg-6">
                <div class="detail__content">
                    <h3 class="detail__content-title">
                        @Model.TENSP
                        @if (@Model.SOLUONG == 0 || @Model.SOLUONG == null)
                        {
                            <span style="color:red;font-size:1.4rem">(Hết Hàng)</span>
                        }
                    </h3>
                    
                    @if (@Model.MUCKM != 0)
                    {
                        <span style=" font-size: 1.8rem;">Giá:   </span>
                        <span class="detail__content-priceold">@String.Format("{0:0,0}", @Model.GIAGOC)</span>
                        <span class="detail__content-pricenew">@string.Format("{0:#,##0} VNĐ", (@Model.GIAGOC - (@Model.GIAGOC * @Model.MUCKM) / 100))</span>
                    }
                    else
                    {
                        <span style=" font-size: 1.8rem;">Giá:   </span>
                        <span class="detail__content-priceold" style="text-decoration:none;font-size:1.6rem;color:#000">@String.Format("{0:0,0}", @Model.GIAGOC) VNĐ</span>
                    }


                    <div class="detail__content-location">
                        <span class="detail__content-catrgory">Loại: @Model.PHANLOAI</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <span class="detail__content-catrgory-exp">HSD: @Model.HANSUDUNG - Tháng</span>
                    </div>
                    <div class="detail__content-quantity">
                        <span>Số lượng:</span>&nbsp;
                        <input type="number" name="quantity" value="1" step="1" min="1" max="99" style="width:100px; border: 1px solid;border-radius:2px" />
                    </div>
                    <div>
                        @if (@Model.SOLUONG != 0)
                        {
                            <a href="@Url.Action("SanPhamPartial", "SanPham")" name="" class="btn btn-danger" style="font-size:1.4rem">
                                <i class="fas fa-long-arrow-alt-left" style="padding-right: 4px;"></i>
                                TIẾP TỤC XEM SẢN PHẨM
                            </a>
                            <a href="@Url.Action("ThemGioHang", "GioHang", new { ms = @Model.MASP, @strURL = Request.Url.ToString() })" name="" class="btn btn-danger" style="font-size:1.4rem">
                                <i class="fas fa-cart-plus" style="padding-right: 4px;"></i>
                                THÊM VÀO GIỎ HÀNG
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("SanPhamPartial", "SanPham")" name="" class="btn btn-danger" style="font-size:1.4rem">
                                <i class="fas fa-long-arrow-alt-left" style="padding-right: 4px;"></i>
                                TIẾP TỤC XEM SẢN PHẨM
                            </a>
                        }
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav nav-tabs" role="tablist" style="padding-top: 40px; border-bottom: 2px solid #CCC; padding-bottom: 10px; ">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab" style="font-size:2.4rem">Đặc điểm</a>
                    </li>
                    <li class="nav-item" style="font-size:2.4rem">||</li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab" style="font-size:2.4rem">Đánh giá</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tabs-1" role="tabpanel">
                        <div class="description">

                            <p class="description-text">Tên SP: @Model.TENSP</p>
                            <p class="description-text">Loại: @Model.PHANLOAI</p>
                            <p class="description-text">Trọng lượng: @Model.TRONGLUONG</p>
                            <p class="description-text">Nhà SX: @Model.XUATXU</p>
                            <p class="description-text"> @Model.THANHPHAN</p>
                            <p class="description-text">Cách dùng: @Model.CACHDUNG</p>
                            <p class="description-text">@Model.MOTA</p>
                        </div>
                    </div>
                    <div class="tab-pane" id="tabs-2" role="tabpanel">
                        <p>Bình luận 1</p>
                        <p>Bình luận 2</p>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="homepage-product__selling">
                    <div class="homepage-product__selling--title">
                        <h3 class="selling-title">SẢN PHẨM LIÊN QUAN</h3>
                        @*<a href="#" class="see-more">Xem thêm</a>*@
                    </div>
                    <div class="homepage-product__sellcontent">

                        <div class="row">
                            @{
                                foreach (var item in tt)
                                {
                                    <div class="col-lg-2 col-md-4 col-sm-6" style=" text-align: center; margin-bottom: 32px">

                                        <a class="home-product-item" href="@Url.Action("XemChiTiet","SanPham", new { @ms = item.MASP })">
                                            <div class="home-product-item__img" style="background-image:url(@Url.Content("~/Images/img_sp/" + item.HINH) ) ;"></div>
                                            <h4 class="home-product-item__name">
                                                @item.TENSP
                                            </h4>
                                            <div class="homepage-product-item__price">
                                                <span class="home-product-item__price-current"> @string.Format("{0:#,##0} VNĐ", (item.GIAGOC - (item.GIAGOC * item.MUCKM) / 100))</span>
                                            </div>
                                        </a>
                                        <a href="@Url.Action("ThemGioHang", "GioHang", new { ms = item.MASP, @strURL = Request.Url.ToString() })" name="" class="btn detail__content-btn-addcart">
                                            <i class="fas fa-cart-plus" style="padding-right: 4px;"></i>
                                            Mua nhanh
                                        </a>
                                    </div>
                                }
                            }
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
