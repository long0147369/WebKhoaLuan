@model WebKhoaLuan.Models.NHACC

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .form-row {
        display: flex;
        /* flex-wrap: wrap;*/
        margin-right: -5px;
        margin-left: -5px;
    }

    .form-group {
        margin-left: 30px;
        margin-bottom: 20px;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

        .form-control:disabled, .form-control[readonly] {
            background-color: #e9ecef;
            opacity: 1;
        }
</style>
<div class="topbar">
    <div class="toggle">
        <ion-icon name="menu-outline"></ion-icon>
    </div>

    <!-- UserImg -->
    <div class="user">
        <img src="~/Images/logo-hufi.jpg" />
    </div>
</div>

<div class="create_product" style="margin-left:15px;">
    @using (Html.BeginForm("Create", "NhaCC", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h2 style="text-align:center;">Thêm Nhà Cung Cấp</h2>
        <div class="form-horizontal" style="border: 1px solid; margin: 8px; border-radius: 8px; box-shadow: 0 7px 25px rgb(0 0 0 / 8%); ">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-row" style=" margin-top: 20px;">
                <div class="form-group col-md-4">
                    Tên Nhà Cung Cấp:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TENNCC, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.TENNCC, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-4">
                    SĐT:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-10">
                    Địa Chỉ:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div style="margin-left:16px;">
                <a style=" margin: 28px;" href="@Url.Action("Index", "NhaCC")" role="button" class="btn btn-primary"><i class="fas fa-angle-left"></i> Trở về</a>
                <input type="submit" value="Xác Nhận" class="btn btn-default" style="background-color: #28A745; color: #ffffff; margin-left: -20px; " />
            </div>
        </div>
    }
</div>

