@using WebKhoaLuan.Models;

@model DONHANG
@{IEnumerable<CHITIETDH> lstChiTietDH = (IEnumerable<CHITIETDH>)ViewBag.ListChiTietDH;}

@{
    ViewBag.Title = "XemDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .pagination {
        margin-top: 20px;
        box-sizing: border-box;
        justify-content: center;
        list-style: none;
        display: flex;
    }

        .pagination li a {
            display: inline-block;
            height: 40px;
            width: 40px;
            border: 1px solid #f2f2f2;
            border-radius: 50%;
            font-size: 14px;
            color: #111111;
            font-weight: 600;
            line-height: 40px;
            text-align: center;
            -webkit-transition: all, 0.3s;
            -o-transition: all, 0.3s;
            transition: all, 0.3s;
            margin-right: 6px;
        }

            .pagination li a:last-child {
                margin-right: 0;
            }

        .pagination li.active a {
            background: #000;
            color: #fff;
        }

        .pagination li a i {
            font-weight: 600;
        }

        .pagination li a:hover {
            background: #0d0d0d;
            border-color: #0d0d0d;
            color: #ffffff;
        }
</style>
<div class="topbar">
    <div class="toggle">
        <ion-icon name="menu-outline"></ion-icon>
    </div>

    <!-- UserImg -->
    <div class="user">
        <img src="~/Images/logo-hufi.jpg" />
    </div>
</div>

<div class="details" style="display:inline-block; font-size:13px;">
    <div class="recentOrders">
        <div class="cardHeader">
            <h2>Thông tin Đơn Hàng</h2>

        </div>
        <table>
            <thead>
                <tr>
                    <td style="text-align: start;">Mã ĐH</td>
                    <td style="text-align: start;">Tên khách hàng</td>
                    <td style="text-align: start;">SĐT</td>
                    <td style="text-align: start;">Địa chỉ</td>
                    <td style="text-align: start;">Tên SP</td>
                    <td style="text-align: start;">Hình</td>
                    <td style="text-align: start;">Đơn giá</td>
                    <td style="text-align: start;">Số lượng</td>
                    <td style="text-align: start;">Thành tiền</td>
                    <td style="text-align: start;">Trạng thái</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in lstChiTietDH)
                {
                    <tr>
                        <td style="text-align: start;"> @Model.MADH @Html.Hidden("MaDH", @Model.MADH)</td>
                        <td style="text-align: start;">@Model.TAIKHOAN.HOTEN</td>
                        <td style="text-align: start;">@Model.SDTGIAO</td>
                        <td style="text-align: start;">@Model.DIACHI</td>
                        <td style="text-align: start;">@item.SANPHAM.TENSP</td>
                        <td style="text-align: start;"><img style="width: 100px; height: 100px; border-radius: 10px; border: 1px solid #007bff;" src="@Url.Content("~/Images/img_sp/" + item.SANPHAM.HINH)" /></td>

                        <td style="text-align: start;">@string.Format("{0:#,##0} VNĐ", (item.DONGIA))</td>
                        <td style="text-align: start;">@item.SOLUONG</td>
                        <td style="text-align: start;">@string.Format("{0:#,##0} VNĐ", (item.DONGIA * item.SOLUONG))</td>
                        <td style="text-align: start;">@Model.GIAOHANG.TRANGTHAI </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>

</div>
<div>
    <a style=" margin: 28px; margin-left: 43px;" href="@Url.Action("Index", "Order")" role="button" class="btn btn-primary"><i class="fas fa-angle-left"></i> Trở về</a>
</div>

